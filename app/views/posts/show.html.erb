 <small>
      <%= image_tag(@post.image) %>
</small>
<h1><%= markdown @post.title %></h1>
<div class="row">
  <div class="col-md-8">
    <small>
      <%= image_tag(@post.user.avatar.tiny.url) if @post.user.avatar? %>
      submitted <%= time_ago_in_words(@post.created_at) %> ago by
      <%= @post.user.name %>
    </small>
    <p><%= markdown @post.body %></p></br>
    <h4>Comments:</h4>
    <% @comments.each do |c| %>
      <%=c.body%></br>
    <%end%>
    <%= link_to "New Comment", new_topic_post_comment_path(topic_id: @topic.id, post_id: @post.id), class: 'btn btn-success' %>
  </div>
  <div class="col-md-4">
    <% if policy(@post).edit? %>
      <%= link_to "Edit", edit_topic_post_path(@topic, @post), class: 'btn btn-success' %>
    <% end %>
  </div>
</div>