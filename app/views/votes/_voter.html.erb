

<% if policy( Vote.new ).create? %>
  <div class="vote-arrows pull-left">
    <div>
      <%= link_to " ",
        up_vote_path(post_id: post.id), class: vote_link_classes(post, 'up'), method: :post%>
    </div>
    <div>
      <strong><%= post.points %></strong>
    </div>
    <div>
      <%= link_to " ",
        down_vote_path(post_id: post.id),
        class: vote_link_classes(post, 'down') , method: :post %>
    </div>
  </div>
<% end %>
